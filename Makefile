all         	 :; forge build --use solc:0.8.16
clean       	 :; forge clean
test        	 :; forge test -vvv --use solc:0.8.16
certora-nst 	 :; PATH=~/.solc-select/artifacts/solc-0.8.16:~/.solc-select/artifacts:${PATH} certoraRun --solc_map Nst=solc-0.8.16,Auxiliar=solc-0.8.16,SignerMock=solc-0.8.16 --optimize_map Nst=200,Auxiliar=0,SignerMock=0 --rule_sanity basic src/Nst.sol certora/Auxiliar.sol certora/SignerMock.sol --verify Nst:certora/Nst.spec --settings -mediumTimeout=180 --optimistic_loop$(if $(short), --short_output,)$(if $(rule), --rule $(rule),)$(if $(multi), --multi_assert_check,)
certora-nst-join :; PATH=~/.solc-select/artifacts/solc-0.8.16:~/.solc-select/artifacts:${PATH} certoraRun --solc_map NstJoin=solc-0.8.16,Nst=solc-0.8.16,VatMock=solc-0.8.16 --optimize_map NstJoin=200,Nst=200,VatMock=0 --rule_sanity basic src/NstJoin.sol src/Nst.sol certora/VatMock.sol --link NstJoin:nst=Nst NstJoin:vat=VatMock --verify NstJoin:certora/NstJoin.spec --settings -mediumTimeout=180 --optimistic_loop$(if $(short), --short_output,)$(if $(rule), --rule $(rule),)$(if $(multi), --multi_assert_check,)
certora-dai-nst  :; PATH=~/.solc-select/artifacts/solc-0.8.16:~/.solc-select/artifacts:${PATH} certoraRun --solc_map DaiNst=solc-0.8.16,NstJoin=solc-0.8.16,Nst=solc-0.8.16,DaiJoinMock=solc-0.8.16,DaiMock=solc-0.8.16,VatMock=solc-0.8.16 --optimize_map DaiNst=200,NstJoin=200,Nst=200,DaiJoinMock=0,DaiMock=0,VatMock=0 --rule_sanity basic src/DaiNst.sol src/NstJoin.sol src/Nst.sol certora/DaiJoinMock.sol certora/DaiMock.sol certora/VatMock.sol --link DaiNst:nstJoin=NstJoin DaiNst:nst=Nst DaiNst:daiJoin=DaiJoinMock DaiNst:dai=DaiMock NstJoin:nst=Nst NstJoin:vat=VatMock DaiJoinMock:nst=DaiMock DaiJoinMock:vat=VatMock --verify DaiNst:certora/DaiNst.spec --settings -mediumTimeout=180 --optimistic_loop$(if $(short), --short_output,)$(if $(rule), --rule $(rule),)$(if $(multi), --multi_assert_check,)